<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PredictionInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@id/txtHeadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtHeadline"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/txtHeadline"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Prediction Result"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:background="#D9EAD9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtHeadline" />

        <TextView
            android:id="@+id/t_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Predicted: "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="label"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/t_label"
            app:layout_constraintStart_toEndOf="@id/t_label" />


        <TextView
            android:id="@+id/t_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Prediction Confidence: "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/t_label"
            app:layout_constraintTop_toBottomOf="@id/t_label" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="confidence"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/t_score"
            app:layout_constraintStart_toEndOf="@id/t_score" />

        <TextView
            android:id="@+id/t_cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Cause: "
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/t_score"
            app:layout_constraintTop_toBottomOf="@id/t_score" />

        <TextView
            android:id="@+id/cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="lorem ipsum dolor sit amet"
            android:textColor="#373737"
            app:layout_constraintBottom_toBottomOf="@id/t_cause"
            app:layout_constraintStart_toEndOf="@id/t_cause" />

        <TextView
            android:id="@+id/t_facts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Facts"
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/t_cause"
            app:layout_constraintTop_toBottomOf="@id/t_cause" />

        <TextView
            android:id="@+id/facts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="20dp"
            android:text="lroem ipsu,lroem ipsu, lroem ipsu,lroem ipsu,lroem ipsu, lroem ipsu, lroem ipsu,"
            android:textColor="#373737"
            app:layout_constraintStart_toStartOf="@id/t_facts"
            app:layout_constraintTop_toBottomOf="@id/t_facts"/>

        <TextView
            android:id="@+id/t_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Symptoms"
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/facts"
            app:layout_constraintTop_toBottomOf="@id/facts" />

        <TextView
            android:id="@+id/symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="20dp"
            android:text="Lorem ipsum"
            android:textColor="#373737"
            app:layout_constraintStart_toStartOf="@id/t_symptoms"
            app:layout_constraintTop_toBottomOf="@id/t_symptoms" />

        <TextView
            android:id="@+id/t_mgmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Management Strategy"
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/symptoms"
            app:layout_constraintTop_toBottomOf="@id/symptoms" />

        <TextView
            android:id="@+id/mgmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="20dp"
            android:paddingBottom="70dp"
            android:text="Lorem ipsum"
            android:textColor="#373737"
            app:layout_constraintStart_toStartOf="@id/t_mgmt"
            app:layout_constraintTop_toBottomOf="@id/t_mgmt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>